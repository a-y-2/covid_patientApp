<html>

<head>
  <title>ðŸ”“ Login</title>
  <!-- Materialize -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">

  <!-- Stylesheets -->
  <link rel="stylesheet" href="/stylesheets/global.css">
  <link rel="stylesheet" href="/stylesheets/login.css">

<body>
  <%=messages%>
  <div class="row hide-on-large-only" style="margin-top: 300px;"></div>
  <div class="row" style="margin-top: 6%;">
    <div class="col m8 offset-m2 l4 offset-l4 ">
      <div class="card grey lighten-3" style="padding: 10px">
        <div class="card-title">
          <h2>
            <center>Login</center>
          </h2>
        </div>

        <div class="card-content">
          <form action="/login" method="POST">

            <!-- Username Field -->
            <div class="row">
              <div class="input-field col s12">
                <input type="text" name="username" id="username" class="validate" />
                <label for="username">Username</label>
              </div>
            </div>

            <!-- Password Field -->
            <div class="row">
              <div class="input-field col s12">
                <input type="password" name="password" id="password" class="validate" />
                <label for="password">Password</label>
              </div>
            </div>

            <!-- Submit Button  -->
            <button class="waves-effect waves-light btn-large col s12 teal accent-4">LOGIN</button>
          </form>
        </div>
        <div class="card-action" style="color: black;">
          <br>
          <a href="/register"><b>New User? SIGN UP instead.</b></a>
        </div>
      </div>
    </div>
  </div>

  <%- include ("./partials/footer") %>
</body>

</html>
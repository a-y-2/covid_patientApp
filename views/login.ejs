<html>
  <head>
    <title>Login</title>
    <%- include ("./partials/header") %>
    <link rel="stylesheet" href="/stylesheets/login.css">

  <body>
    <h1>
      <center>Login</center>
    </h1>

    <!-- LOGIN FORM -->
    <div class="container">
      <div class="row">
        <form action="/login" method="POST" class="col s6 offset-s3">

          <!-- Username Field -->
          <div class="row">
            <div class="input-field col s12">
              <input
                type="text"
                name="username"
                id="username"
                class="validate"
              />
              <label for="username">Username</label>
            </div>
          </div>

          <!-- Password Field -->
          <div class="row">
            <div class="input-field col s12">
              <input
                type="password"
                name="password"
                id="password"
                class="validate"
              />
              <label for="password">Password</label>
            </div>
          </div>

            <!-- Submit Button  -->
          <button class="waves-effect waves-light btn">LOGIN</button>
        
        </form>
      </div>
    </div>

    <center>
      <button class="waves-effect waves-light btn"><a href="/register">SIGN UP</a></button>
    </center>
    <!-- <li><a href="/login">login</a></li> -->
    <!-- <li><a href="/logout">logout</a></li> -->

    <%- include ("./partials/footer") %>
  </body>
</html>

<html>
<head>
    <title>📝 Daily Report</title>

    <!-- Materialize & Google Font -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
 
    <!-- Stylesheets -->
    <link rel="stylesheet" href="/stylesheets/global.css">
</head>

<body>
    <%- include ("../partials/header") %>

    <div class="container row" style="
          background-color: palegoldenrod;
          padding: 5px ;
          margin: 20px auto;
          text-align: center;
        ">
        <h3>📝 Daily Report</h3>
        <form action="/dashboard" method="POST" class="col s12 m12 l12">
            <div class="row">
                <div class="input-field col s12 m10 offset-m1 l8 offset-l2">
                    <label for="date">Date</label>
                    <input type="date" placeholder="" id="date" name="date">
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 m10 offset-m1 l2 offset-l2">
                    <label for="oxygen">Oxygen-level (%)</label>
                    <input type="number" id="oxygen" name="oxygen">
                </div>
            
                <div class="input-field col s12 m10 offset-m1 l3 ">
                    <label for="temp">Body-temperature (&#8451;)</label>
                    <input type="number" id="temp" name="temp">
                </div>
        
                <div class="input-field col s12 m10 offset-m1 l3 ">
                    <label for="bp">Blood-pressure (mmHg)</label>
                    <input type="text" id="bp" name="bp">
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 m10 offset-m1  l8 offset-l2">
                    <textarea id="other" name="other" class="materialize-textarea"></textarea>
                    <label for="other">Any other symptoms</label>
                </div>
            </div>
            <div class="row">
                <div class="col s12 m10 offset-m1 l6 offset-l3">
                    <button class="btn waves-effect waves-light btn-large teal accent-4  black-text">Submit
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>
            
        </form>
    </div>

    <%- include ("../partials/footer") %>
</body>
</html>